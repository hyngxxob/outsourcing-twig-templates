{% if site['resetPassword'] %}
<div class="container" style="width: 100%;max-width: 860px;padding: 40px 0 150px;margin: 0 auto;">
  <div class="row" style="display: flex;justify-content: center;background: #FAFAFA;border-radius: 30px;padding: 36px 20px;">
    <div class="col-md-8 col-md-offset-2">
      <div class="well" style="background: #FAFAFA;">
        <div class="topBox">
            <p class="title">(고객사)</p>
            <h4>{{  lang('resetpassword.title') }}</h3>
        </div>
        <form {% if site['rtl'] %}class="rtl-form"{% endif %} method="post" action="">
          {% if error %}
            <div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              {{ errorMessage }}
            </div>
          {% endif %}
          {% if success %}
            <div class="alert alert-dismissible alert-success {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ successText }}
            </div>
          {% endif %}
          <div class="form-group">
            <label for="email" class="control-label">{{ lang('resetpassword.email') }}</label>
            <input type="email" class="form-control" id="email" name="ResetPasswordForm[email]">
          </div>
          {% if site['captcha'] %}
            {{ captchaCode }}
          {% endif %}
          <button type="submit" class="btn btn-primary" style="width: 100%; background-color: #FF3E52; color:white;">{{ lang('resetpassword.button.send') }}</button>
          <input type="hidden" name="_csrf" value="{{csrftoken}}">
        </form>
      </div>
    </div>
  </div>
</div>
{% endif %}
